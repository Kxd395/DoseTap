{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "dose_event": {
      "type": "object",
      "required": ["id", "type", "timestamp"],
      "properties": {
        "id": { "type": "string" },
        "type": { 
          "type": "string",
          "enum": ["dose1", "dose2", "skip"]
        },
        "timestamp": { "type": "string", "format": "date-time" },
        "planned_timestamp": { "type": "string", "format": "date-time" },
        "meta": {
          "type": "object",
          "properties": {
            "snooze_count": { "type": "integer", "minimum": 0 },
            "undo_used": { "type": "boolean" }
          }
        }
      }
    },
    "sleep_event": {
      "type": "object",
      "required": ["type", "timestamp"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["bathroom", "lights_out", "wake_final"]
        },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    }
  }
}
